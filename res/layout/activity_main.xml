<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" android:background="@color/background">

    <Button
        android:id="@+id/bRecordMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:text="Record Message" />

    <Button
        android:id="@+id/bTestMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bRecordMessage"
        android:layout_alignRight="@+id/bRecordMessage"
        android:layout_below="@+id/bRecordMessage"
        android:layout_marginTop="40dp"
        android:text="Test Message" />

</RelativeLayout>